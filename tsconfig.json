{
  "compilerOptions": {
    "declaration": true,           // This generates .d.ts files
    "declarationDir": "./dist",    // Where to put the type definitions
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"]
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules", "dist"]
}